<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagefirstactivity"
            android:layout_width="412dp"
            android:layout_height="336dp"
            android:scaleType="centerCrop"
            android:src="@drawable/firstactivity1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textViewfirstactivitytitle"
            android:layout_width="349dp"
            android:layout_height="28dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="What is AirTrack?"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="348dp" />

        <TextView
            android:id="@+id/textViewfirstactivitydesc"
            android:layout_width="349dp"
            android:layout_height="107dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter"
            android:justificationMode="inter_word"
            android:text="AirTrack is a mobile application which can enable user to keep track on their home air quality and alert them when Air Quality Index reaches dangerous level."
            android:textColor="#090909"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="377dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/buttonskip1"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:text="Skip"
                android:fontFamily="@font/inter_bold"
                android:backgroundTint="@color/black"
                app:cornerRadius="20dp"
                tools:layout_editor_absoluteX="258dp"
                tools:layout_editor_absoluteY="514dp" />

            <Button
                android:id="@+id/buttonContinue1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:backgroundTint="#3B96EE"
                android:fontFamily="@font/inter_bold"
                android:text="Continue"
                app:cornerRadius="20dp"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="515dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>