<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagesecondactivity"
            android:layout_width="412dp"
            android:layout_height="336dp"
            android:scaleType="fitCenter"
            android:src="@drawable/secondactivity"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textViewfirstactivitytitle"
            android:layout_width="349dp"
            android:layout_height="28dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="Air Quality Index"
            android:fontFamily="@font/inter_bold"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="348dp" />

        <TextView
            android:id="@+id/textViewfirstactivitydesc"
            android:layout_width="349dp"
            android:layout_height="107dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter"
            android:justificationMode="inter_word"
            android:text="The Air Quality Index (AQI) is used for reporting daily air quality. It tells you how clean or polluted your air is, and what associated health effects might be a concern for you."
            android:textColor="#090909"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="377dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/buttonskip2"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:text="Skip"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/inter_bold"
                app:cornerRadius="20dp"
                tools:layout_editor_absoluteX="258dp"
                tools:layout_editor_absoluteY="514dp" />

            <Button
                android:id="@+id/buttonContinue2"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Continue"
                android:backgroundTint="#3B96EE"
                app:cornerRadius="20dp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginLeft="100dp"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="515dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>